<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/size16"
        android:layout_width="@dimen/size5"
        android:background="@color/yellow"
        android:layout_height="@dimen/size150"/>

    <TextView
        android:id="@+id/txt_title"
        app:layout_constraintStart_toEndOf="@id/view_color"
        app:layout_constraintTop_toTopOf="@id/view_color"
        android:text="@string/title"
        android:textSize="@dimen/size25"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/size16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_date"
       app:layout_constraintStart_toStartOf="@id/txt_title"
        app:layout_constraintBottom_toBottomOf="@id/view_color"
        android:layout_marginEnd="@dimen/size16"
        android:text="2020 00:00"
        android:textSize="@dimen/size16"
        android:layout_marginTop="@dimen/size16"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image_item_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_color"
        app:layout_constraintBottom_toBottomOf="@id/view_color"
        android:layout_marginEnd="@dimen/size16"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="@dimen/size150"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>